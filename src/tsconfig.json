{
    "atom": {
        "rewriteTsconfig": false
    },
    "buildOnSave": false,
    "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es6", "dom" ],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../lib",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "../dist",
    "../lib",
    "../node_modules",
    "../bin",
    "../obj"
  ]
}